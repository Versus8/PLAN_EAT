<div class="container list-plannings">
  <% @plannings.each do |planning| %>
    <div class="list-planning row">
      <div class="left col-7">
          <%= link_to "#{planning.date}", recipe_path(planning.recipe), class: "date-list-planning" %>
          <%= link_to "#{planning.recipe.name}", recipe_path(planning.recipe), class: "recipe-name-list-planning" %>

        <div class="btn-list-plannings">
          <%= link_to "Edit", planning_path(planning), class: "btn btn-list-planning" %>

          <%# <%= link_to "Add ingredients to list", recipe_ingredients_index_path(planning.recipe) %>
          <% if planning.user == current_user %>
            <%= link_to "Delete", planning_path(planning), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-list-planning" %>
          <% end %>
        </div>
      </div>
      <div class="right col-5">
        <% if planning.recipe.photo.key? %>
          <%= cl_image_tag planning.recipe.photo.key, height: 100, class: "img-list-planning" %>
        <% else %>
          <%= image_tag "https://res.cloudinary.com/du9ruv4nu/image/upload/v1701303120/recettes_vvohs6.jpg", alt: "Le Wagon", class: "img-list-planning" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
