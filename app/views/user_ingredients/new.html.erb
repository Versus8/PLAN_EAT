<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <div class="">
      <%= link_to 'Back', plannings_path, class: 'btn btn-back' %>
    </div>
          <a href="/" class="avatar">
            <%= image_tag "https://res.cloudinary.com/du9ruv4nu/image/upload/v1701295547/logo_plan_eat_rqt7kp.png", class: "avatar", alt: "dropdown menu" %>
          </a>
  </div>
</div>
<div class="main-container container">
  <h1><%= @recipe.name %></h1>
  <h5>Add ingredients to the shopping list:</h5>



      <%= simple_form_for @user_ingredient, url: recipe_user_ingredients_path(@recipe), method: :post do |f| %>
        <ul class="list-ingredients">
          <% @ingredients.each do |ingredient| %>
            <%# <div class="form-check"> %>
              <li class="ingredient-li p-2">
                <div class="ingredient">
                  <%= image_tag "task_list.png", height: 30, width: 30 %>
                  <%= f.label "ingredient_#{ingredient.id}", ingredient.name.capitalize, class:"form-checked-label"%>
                  <%= check_box_tag "user_ingredient[ingredient_ids][]", ingredient.id, id: "ingredient_#{ingredient.id}" %>
                </div>
              </li>
            <%# </div> %>
          <% end %>
        </ul>
        <div class="d-flex justify-content-center">
          <%= f.button :submit, "Submit", class:"mb-4 mt-1", id:"btn-submit" %>
        </div>
    <% end %>

</div>
