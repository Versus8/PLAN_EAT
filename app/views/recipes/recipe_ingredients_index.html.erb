<div class="container">
  <h2>Which ingredients do you already have?</h2>
</div>

  <ul class="list-ingredients">
      <% @ingredients.each do |ingredient| %>
        <li class="ingredient-li p-2">
          <div class="ingredient">
            <%= image_tag "link.png", class: "", crop: :fill %>


            <label for="opt-in"><%= ingredient.quantity %>
              <%= ingredient.unit %>
              of <%= ingredient.name %></label>
            <%# <%= image_tag "check-circle.png", class: "img-fluid", crop: :fill %>
            <%# <input type="checkbox" name="my-checkbox" id="opt-in" class="checkbox-ingredient" /> %>
            <label class="custom-checkbox">
              <input type="checkbox">
              <span class="checkmark"></span>
            </label>

          </div>
        </li>
      <% end %>
  </ul>
  <div class="btn-ingredient-done d-flex justify-content-center">
    <%= link_to "Done", ingredients_list_path, class: "btn btn-ingredient-done" %>
  </div>
</div>
