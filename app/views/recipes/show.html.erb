<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <div class="">
      <%= link_to 'Back', recipes_path, class: 'btn btn-back' %>
    </div>
          <a href="/" class="avatar">
            <%= image_tag "https://res.cloudinary.com/du9ruv4nu/image/upload/v1701295547/logo_plan_eat_rqt7kp.png", class: "avatar", alt: "dropdown menu" %>
          </a>
  </div>
</div>
<div class="container-show">
  <div class="cards-recipe py-5 px-3 mt-3 mx-0">

    <% if @recipe.photo.key? %>
          <%= cl_image_tag @recipe.photo.key, class: "img-recipe mb-4" %>
    <% else %>
          <%= image_tag "https://res.cloudinary.com/du9ruv4nu/image/upload/v1701303120/recettes_vvohs6.jpg", height: 300, alt: "Le Wagon", class: "category" %>
    <% end %>
    <h1><strong><%= @recipe.name %></strong></h1>
    <h3 class="title-recipe-description"><%= @recipe.description %></h3>
    <p class="fw-bold">Preparation: </p>
    <p><%= @recipe.preparation %></p>
    <%= link_to "Add to Planning", new_recipe_planning_path(@recipe), class: "btn-orange" %>

    <% if @recipe.user == current_user %>
      <%= link_to "Delete", recipe_path(@recipe), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn button-6 m-3" %>
    <% end %>
    <% if @recipe.user == current_user %>
    <%= link_to "Update", edit_recipe_path(@recipe), class: "btn button-6 m-3" %>
    <% end %>
  </div>
</div>
