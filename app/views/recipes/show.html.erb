<%= link_to "Back", recipes_path %>
<div class="container-show">
  <div class="cards-recipe">
    <%= cl_image_tag @recipe.photo.key, alt: "Le Wagon", class: "img-recipe" %>
    <h1><strong><%= @recipe.name %></strong></h1>
    <h3><%= @recipe.description %></h3>
    <p><%= @recipe.preparation %></p>
    <%= link_to "Add to Planning", new_recipe_planning_path(@recipe), class: "btn btn-primary btn-lg mb-5" %>

    <% if @recipe.user == current_user %>
      <%= link_to "Delete", recipe_path(@recipe), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn button-6 m-3" %>
    <% end %>
    <% if @recipe.user == current_user %>
    <%= link_to "Update", edit_recipe_path(@recipe), class: "btn button-6 m-3" %>
    <% end %>
  </div>
</div>
