<h1>Hello <%= @user.name %></h1>

<%= link_to "Create a recipe", new_recipe_path %>

<div class="container">
  <div class="row">
    <div class="col-lg-12" style="border: 1px solid red">
      <% @recipes.each do |recipe| %>
      <%= image_tag "", alt: "Le Wagon", class: "img-book" %>
      <h2><%= recipe.name %></h2>
      <%= link_to "See recipe", recipe_path(recipe), class: "btn button-6" %>
      <% end %>
    </div>
  </div>
</div>
