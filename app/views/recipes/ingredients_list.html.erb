<div class="main-container">
  <h2 class="my-4 text-center">My shopping list</h2>

  <ul class="ingredients py-4">
      <% @ingredients.each do |ingredient| %>
        <li class="ingredients">
        <div>
          <input type="checkbox" name="my-checkbox" id="opt-in" />
          <label for="opt-in"><%= ingredient.quantity %>
          <%= ingredient.unit %>
          of <%= ingredient.name %></label>
        </div>

        <p>
          <%= link_to "", ingredients_list_path, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "" %>
        </p>
      <% end %>
        </li>
  </ul>
</div>
