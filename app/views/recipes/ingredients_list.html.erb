<h2>My shopping list</h2>

<ul>
    <% @ingredients.each do |ingredient| %>
      <li class="ingredients">
      <p> <%= ingredient.quantity %>
          <%= ingredient.unit %>
          of <%= ingredient.name %>
          <%= link_to "", ingredients_list_path, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "fas fa-check-square" %>
      </p>
    <% end %>
      </li>
</ul>
