<div class="containernew">

  <div class="text-center">
  <h1>Create your recipe</h1>
  </div>

  <div class="form-new-recipe">
    <div class="list-ingredients">
      <%= simple_form_for(@recipe) do |f| %>
        <%= f.input :photo, as: :file %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :preparation %>
        <%= f.association :categories, as: :check_boxes, include_hidden: false %>

        <div>Ingredients list</div>

        <%= f.simple_fields_for :ingredients do |r| %>

          <%= render "recipes/ingredient_fields", :f => r %>

        <% end %>
        <%# Ne pas renommer la classe links pour un autre nom car la gem Cocoon en dépend (Permet d'ajouter plusieurs ingrédients à la suite) %>
        <div class="links">
          <%= link_to_add_association "+ Add ingredient", f, :ingredients, force_non_association_create: true, class:"link text-black-75" %>
        </div>
    </div>
    <div class="d-grid gap-2 d-md-block">
      <%= f.submit "Create", class: "btn btn-primary mx-auto my-3 px-5" %>
    </div>
    <% end %>
  </div>
</div>
